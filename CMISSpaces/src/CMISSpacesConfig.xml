<?xml version="1.0"?>
<objects xmlns="http://www.pranaframework.org/objects" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.pranaframework.org/objects
                             http://www.pranaframework.org/schema/objects/prana-objects-0.6.xsd">

	<object id="cmisConfig" class="org.integratedsemantics.cmisspaces.model.config.CMISConfig">
	
		<!--  cmis service atompub rest url of cmis repository -->
		<!--property name="cmisUrl" value="http://localhost:8080/alfresco/service/api/cmis"/-->
		<!--property name="cmisUrl" value="http://localhost:8080/nuxeo/site/cmis/repository"/-->
		<property name="cmisUrl" value="http://cmis.alfresco.com:80/service/api/cmis"/>
		
		<!--  cmis service soap / webservice url --> 
		<!--property name="cmisWebServicesUrl" value="http://localhost:80/alfresco/cmis"/-->
		<property name="cmisWebServicesUrl" value="http://cmis.alfresco.com:80/alfresco/cmis"/>
        
		<!-- whether to use soap web services or rest atom apis -->  
		<property name="useWebServices" value="false"/>
		
		<!-- (for both flex+browser and flex+air) path to cross domain file to load (say from Tomcat ROOT webapp)
		    1. "allow-access-from domain= to-ports=" needed to use flash sockets api even on local domain, 
		    2. allow use of http headers even on local domain with "allow-http-request-headers-from domain= headers=",		
		    3. and "allow-access-from domain= to-ports=" for cross domain use --> 
		<property name="crossDomainFileUrl" value="http://localhost:8080/crossdomain.xml"/>  			

		<!-- whether to use sockets or non sockets (HttpService, URLLoader) communication -->  
		<property name="useSockets" value="false"/>
					
	</object>

    <object id="appConfig" class="org.integratedsemantics.flexspaces.model.global.AppConfig">
        <!-- default locale -->  
        <property name="locale" value="en_US"/>    

        <!-- whether store to locally short term store ticket / docLibPath / tabIndex -->
        <!-- allows restoring state after browser refresh, portlet resize, and re-running app -->
        <property name="useSessionData" value="false"/>                 
        <!-- when short term data storage is used (useSessionData true), how long (in minutes) -->
        <!-- can data still be used to restore state when app restarts -->
        <property name="sessionDataValidTime" value="30"/>  
                                
    </object>

    <object id="presModel" class="org.integratedsemantics.cmisspaces.presmodel.main.CMISSpacesPresModel">
        <!-- configure what tab views to display -->
        <property name="showDocLib" value="true"/>        
        <property name="showSearch" value="true"/>                
        <property name="showCheckedOut" value="true"/>                

        <!-- default page sizes for views --> 
        <property name="docLibPageSize" value="10"/>    
        <property name="searchPageSize" value="10"/>    
        <property name="versionsPageSize" value="10"/>    
        <property name="checkedOutPageSize" value="10"/>    
        <property name="pageSizeList">
            <array-collection>
                <value>10</value>
                <value>20</value>
                <value>30</value>
                <value>40</value>
                <value>50</value>
            </array-collection>
        </property>                               
    </object>

</objects>
